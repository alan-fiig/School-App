<script>
    function closeNotification(notificationId) {
        var notification = document.getElementById(notificationId);
        if (notification) {
        setTimeout(function () {
            notification.remove();
        }, 3000); 
        }
    }
    
    closeNotification("alert-info");
    closeNotification("alert-success");
    closeNotification("alert-error");
</script>
