<%= render 'admin/menu' %>
<link rel="stylesheet" href="https://demos.creative-tim.com/notus-js/assets/styles/tailwind.css">
<link rel="stylesheet" href="https://demos.creative-tim.com/notus-js/assets/vendor/@fortawesome/fontawesome-free/css/all.min.css">

<div class="p-4 sm:ml-64 dark:bg-gray-800 min-h-screen flex items-center justify-center">
    <div class="w-10/12 mt-20 px-4 mx-auto">
        <div class="relative flex flex-col min-w-0 break-words bg-gray-100 dark:bg-gray-900 w-full shadow-xl rounded-lg mt-16">
            <div class="flex flex-wrap justify-center">
                <div class="w-full px-4 flex justify-center">
                    <div class="relative">
                        <img src="<%= url_for(@student.photo) %>" class="shadow-xl rounded-full h-auto align-middle border-none absolute -m-16 -ml-20 lg:-ml-16 max-w-150-px">
                    </div>
                </div>
                <div class="w-full text-center mt-20">
                    <div class="flex justify-center py-4 lg:pt-4 pt-8">
                        <div class=" p-3 text-center">
                            <span class="text-xl font-bold block uppercase tracking-wide text-gray-900 dark:text-white mb-2">
                                <%= @student.grade %>
                            </span>
                            <span class="text-sm text-gray-500 dark:text-gray-400">Grado</span>
                        </div>
                        <div class=" p-3 text-center">
                            <span class="text-xl font-bold block tracking-wide text-gray-900 dark:text-white mb-2">
                                <%= @student.group %>
                            </span>
                            <span class="text-sm text-gray-500 dark:text-gray-400">Grupo</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="text-center mt-8">
                <h3 class="text-xl font-semibold leading-normal text-gray-900 dark:text-white mb-2">
                    <%= @student.name %> <%= @student.last_name %>
                </h3>
                <div class="text-sm leading-normal mt-0 mb-2 text-gray-600 dark:text-gray-300 font-bold">
                    <i class="fas fa-map-marker-alt mr-2 text-lg text-gray-600 dark:text-gray-300"></i>
                    <%= @student.email %>
                </div>
                <div class="mb-2 text-gray-500 dark:text-gray-400 mt-10">
                    <i class="fas fa-briefcase mr-2 text-lg text-gray-500"></i>
                    Solution Manager - Creative Tim Officer
                </div>
                <div class="mb-2 text-gray-500 dark:text-gray-400">
                    <i class="fas fa-university mr-2 text-lg text-gray-500"></i>
                    University of Computer Science
                </div>
            </div>
            <div class="mt-10 py-10 border-t border-blueGray-200 text-center">
    <div class="flex flex-wrap justify-center items-center">
        <div class="w-full lg:w-9/12 px-4">
            <p class="mb-4 text-lg leading-relaxed text-gray-500 dark:text-gray-400">
                Description
            </p>
            <div class="flex justify-center items-center">
                <%= link_to admin_students_path, class:"cursor-pointer duration-200 hover:scale-125 active:scale-100", title:"Regresar" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" width="50px" height="50px" viewBox="0 0 24 24" class="stroke-blue-300">
                        <path stroke-linejoin="round" stroke-linecap="round" stroke-width="1.5" d="M11 6L5 12M5 12L11 18M5 12H19"></path>
                    </svg>
                <% end %>
            </div>
        </div>
    </div>
</div>

        </div>
    </div>
</div>
